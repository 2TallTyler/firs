<tal:economies repeat="economy doc_helper.get_economies_sorted_by_name()"
               define="banned_cargos {'mail', 'passengers'}; supply_cargos {'farm_supplies', 'engineering_supplies', 'manufacturing_supplies'}">
digraph ${economy.id} {
    fontname="sans-serif"
    #labelloc=t
    #labeljust=l
    #label="Economy: ${doc_helper.get_economy_name(economy)}"

    <tal:cargos repeat="cargo sorted(economy_schemas[economy].enabled_cargos, key=doc_helper.get_cargo_name)">
        <tal:not_banned condition="cargo.id not in banned_cargos">
            C_${cargo.id} [label="${doc_helper.get_cargo_name(cargo)}" href="cargos.html#${cargo.id}" target="_top" fontname="sans-serif"
                <tal:supplies condition="cargo.id in supply_cargos">
                    style="filled"
                    fillcolor="#ddaaff"
                </tal:supplies>
            ]
        </tal:not_banned>
    </tal:cargos>

    <tal:industries repeat="industry sorted(economy_schemas[economy].enabled_industries, key=doc_helper.get_industry_name)">
        <tal:industry define="cargos_used_by_industry doc_helper.cargos_used_by_industry(industry)">
            I_${industry.id} [shape=box label=<
                <table border="0" cellborder="0">
                    <tr><td>${doc_helper.get_industry_name(industry, economy)}</td></tr>
                    <tal:cargos repeat="cargo cargos_used_by_industry[economy]['accept_cargo_types']">
                        <tal:supplies condition="cargo.id in supply_cargos">
                            <tr><td>[${doc_helper.get_cargo_name(cargo)}]</td></tr>
                        </tal:supplies>
                    </tal:cargos>
                </table>
            >
            href="industries.html#${industry.id}" target="_top" fontname="sans-serif"
            tooltip="${doc_helper.get_industry_name(industry, economy)}"
            <tal:lifetype tal:switch="industry.default_industry_properties.life_type">
                <tal:primary tal:case="'IND_LIFE_TYPE_EXTRACTIVE'">
                    style="filled"
                    fillcolor="#aaffbb"
                </tal:primary>
                <tal:primary tal:case="'IND_LIFE_TYPE_ORGANIC'">
                    style="filled"
                    fillcolor="#aaffbb"
                </tal:primary>
                <tal:primary tal:case="'IND_LIFE_TYPE_PROCESSING'">
                    style="filled"
                    fillcolor="#ffcc55"
                </tal:primary>
                <tal:primary tal:case="'IND_LIFE_TYPE_BLACK_HOLE'">
                    style="filled"
                    fillcolor="#88ccff"
                </tal:primary>
            </tal:lifetype>
            ]
            #<tr><td><img width="100%" src="static/img/industries/${industry.id}.png"/></td></tr>
    
            <tal:cargos repeat="cargo cargos_used_by_industry[economy]['accept_cargo_types']">
                <tal:not_banned condition="(cargo.id not in banned_cargos) and (cargo.id not in supply_cargos)">
                    C_${cargo.id} -> I_${industry.id}
                </tal:not_banned>
                <tal:banned condition="cargo.id in banned_cargos">
                    CI_${industry.id}_${cargo.id} [label="${doc_helper.get_cargo_name(cargo)}" href="cargos.html#${cargo.id}" target="_top" fontname="sans-serif"]
                    CI_${industry.id}_${cargo.id} -> I_${industry.id}
                </tal:banned>
            </tal:cargos>
            <tal:cargos repeat="cargo cargos_used_by_industry[economy]['prod_cargo_types']">
                <tal:not_banned condition="cargo.id not in banned_cargos">
                    I_${industry.id} -> C_${cargo.id}
                </tal:not_banned>
                <tal:banned condition="cargo.id in banned_cargos">
                    CI_${industry.id}_${cargo.id} [label="${doc_helper.get_cargo_name(cargo)}" href="cargos.html#${cargo.id}" target="_top" fontname="sans-serif"]
                    I_${industry.id} -> CI_${industry.id}_${cargo.id}
                </tal:banned>
            </tal:cargos>
        </tal:industry>
    </tal:industries>
}
</tal:economies>
