cargo_icon_template(cargoicon_${cargo.id}, ${cargo.icon_indices[0]}, ${cargo.icon_indices[1]})

<tal:build_economies repeat="economy global_constants.economies">
    if (param[0]==${repeat.economy.index}) {
        <tal:cargo_on_or_off condition="cargo.get_property('disabled', economy) != True">
            if (${cargo.get_conditional_expressions_for_cargo_climates()}) {
                item(FEAT_CARGOS, ${cargo.id}, ${cargo.number}) {
                    property {
                        ${cargo.get_property_declaration('number')}
                        ${cargo.get_property_declaration('type_name')}
                        ${cargo.get_property_declaration('unit_name')}
                        ${cargo.get_property_declaration('type_abbreviation')}
                        ${cargo.get_property_declaration('sprite')}
                        ${cargo.get_property_declaration('weight')}
                        ${cargo.get_property_declaration('station_list_colour')}
                        ${cargo.get_property_declaration('cargo_payment_list_colour')}
                        ${cargo.get_property_declaration('is_freight')}
                        ${cargo.get_property_declaration('cargo_classes')}
                        ${cargo.get_property_declaration('cargo_label')}
                        ${cargo.get_property_declaration('town_growth_effect')}
                        ${cargo.get_property_declaration('town_growth_multiplier')}
                        ${cargo.get_property_declaration('units_of_cargo')}
                        ${cargo.get_property_declaration('items_of_cargo')}
                        ${cargo.get_property_declaration('penalty_lowerbound')}
                        ${cargo.get_property_declaration('single_penalty_length')}
                        ${cargo.get_property_declaration('price_factor')}
                        ${cargo.get_property_declaration('capacity_multiplier')}
                    }
                    graphics {
                        station_rating: switch_station_rating;
                        cargoicon_${cargo.id};
                    }
                }
            }
        </tal:cargo_on_or_off>
    }
</tal:build_economies>
