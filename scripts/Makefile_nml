.PHONY: preprocesspy

################################################################
# NML-specific targets and rules
################################################################

nml: preprocesspy
	$(_E) "[CPP] $(NML_FILE)"
	$(_V) $(CC) -D REPO_REVISION=$(REPO_REVISION) $(CC_FLAGS) $(MAIN_SRC_FILE) > $(NML_FILE)

preprocesspy:
	mkdir -p generated_pnml
	$(_V)-touch generated_pnml/_files_here_are_generated.txt
	python scripts/preprocess.py '${REPO_TITLE}' '${REPO_REVISION}'

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_E) "[CLEAN NML]"
	$(_V)-rm -rf $(NML_FILE)
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated_pnml

test::
	$(_E) "nml:                          $(NML) $(NML_FLAGS)"
