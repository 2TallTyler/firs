CC_FLAGS ?= -D TEST_INDUSTRY=$(TEST_INDUSTRY) -C -E -nostdinc -x c-header

MAIN_SRC_FILE := generated/pnml/firs.pnml
NML_FILE := generated/firs.nml

GENERATE_PNML = $(MAIN_SRC_FILE)
INDUSTRY_PY_SRC = $(wildcard src/industries/[a-z]*.py)
INDUSTRY_PYPNML_SRC = $(INDUSTRY_PY_SRC:.py=.pypnml)
INDUSTRY_SOURCES = $(INDUSTRY_PY_SRC) $(INDUSTRY_PYPNML_SRC)
CARGO_SOURCES = $(wildcard src/cargos/[a-z]*.py)
TEMPLATES = $(wildcard src/templates/*)
CONSTANTS = src/defines.pnml src/global_constants.py
MODULES = src/cargo.py src/firs.py src/industry.py src/render_pnml.py src/utils.py
# docs not actually in any way a dep for firs.pnml, but for current configuration, this is only way to get docs build reliably by makefile
DOCS = $(wildcard src/docs_templates/*)

generated/pnml/firs.pnml: scripts/preprocess.py $(INDUSTRY_SOURCES) $(CARGO_SOURCES) $(TEMPLATES) $(CONSTANTS) $(MODULES)
	$(_E) [GENERATE PNML]
	$(_V) PYTHONPATH=${PYTHONPATH2} ${PYTHON2} scripts/preprocess.py '${REPO_TITLE}' '${REPO_REVISION}' '${TEST_INDUSTRY}' '${NO_MP}'

docs: src/render_docs.py $(DOCS) $(INDUSTRY_SOURCES) $(CARGO_SOURCES) $(CONSTANTS) $(MODULES)
	$(_E) "[DOCS]"
	$(_V) PYTHONPATH=${PYTHONPATH2} ${PYTHON2} src/render_docs.py '${REPO_TITLE}' '${REPO_REVISION}' '${TEST_INDUSTRY}' '${NO_MP}'

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_E) "[CLEAN PNML]"
	$(_V)-rm -rf $(NML_FILE)a
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated
	$(_E) "[CLEAN DOCS]"
	$(_V)-rm -r docs
