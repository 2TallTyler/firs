CC_FLAGS ?= -D TEST_INDUSTRY=$(TEST_INDUSTRY) -C -E -nostdinc -x c-header

# graphviz tools
GVPR ?= $(shell which gvpr)
DOT  ?= $(shell which dot)

MAIN_SRC_FILE := generated/nml/firs.nml
NML_FILE := generated/firs.nml

GENERATE_PNML = $(MAIN_SRC_FILE)
GENERATE_DOC  = html_docs
INDUSTRY_PY_SRC = $(wildcard src/industries/[a-z]*.py)
INDUSTRY_SOURCES = $(INDUSTRY_PY_SRC)
CARGO_SOURCES = $(wildcard src/cargos/[a-z]*.py)
ECONOMY_SOURCES = $(wildcard src/economies/[a-z]*.py)
TEMPLATES = $(wildcard src/templates/*)
CONSTANTS = src/templates/defines.pypnml src/global_constants.py
MODULES = src/cargo.py src/economy.py src/firs.py src/industry.py src/render_pnml.py src/utils.py

generated/nml/firs.nml: $(INDUSTRY_SOURCES) $(CARGO_SOURCES) $(ECONOMY_SOURCES) $(TEMPLATES) $(CONSTANTS) $(MODULES)
	$(_E) [GENERATE PNML]
	$(_V) python src/render_pnml.py '${REPO_TITLE}' '${REPO_REVISION}' '${TEST_INDUSTRY}' '${NO_MP}'

DOCS_SRC = $(wildcard src/docs_templates/*)
DOCS_SOURCES = src/render_docs.py $(DOCS_SRC)

# !! Makefile already has a 'doc' target and DOC_FILES, not same as 'docs'
# 'doc' provides not-useful code for the way FIRS generates docs
# 'doc' could be refactored and made useful for FIRS, and 'docs' then removed
html_docs: $(DOCS_SOURCES) $(INDUSTRY_SOURCES) $(CARGO_SOURCES) $(ECONOMY_SOURCES) $(CONSTANTS) $(MODULES)
	$(_E) "[HTML DOCS]"
	$(_V) python src/render_docs.py '${REPO_TITLE}' '${REPO_REVISION}' '${TEST_INDUSTRY}' '${NO_MP}'
# Insane trick to check whether both DOT and GVPR are not empty.
ifeq ($(DOT)$(GVPR),$(GVPR)$(DOT))
	$(_E) "[HTML DOCS] graphviz not found, skipping cargo flow graphs"
else
	$(_V) mkdir docs/html/static/img/cargoflow
	$(_V) $(GVPR) 'BEG_G { fname = sprintf("docs/html/%s.dot", $$G.name); writeG($$G, fname) }' docs/cargoflow.dotall
	$(_V) cd docs/html; $(DOT) -Tsvg -O *.dot
endif

$(DOC_FILES): html_docs

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_V)-rm -r docs
	$(_V)-rm -r .chameleon_cache
	$(_V)-rm -r generated
	$(_V)-rm -r .nmlcache
	$(_V)-rm -r src/__pycache__
	$(_V)-rm -r src/*/__pycache__

