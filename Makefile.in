.PHONY: firs-pnml

GENERATE_PNML = firs-pnml

CC_FLAGS ?= -D TEST_INDUSTRY=$(TEST_INDUSTRY) -C -E -nostdinc -x c-header

firs-pnml:
	$(_E) [GENERATE PNML]
	$(_V) mkdir -p generated_pnml
	$(_V) touch generated_pnml/_files_here_are_generated.txt
	$(_V) python scripts/preprocess.py '${REPO_TITLE}' '${REPO_REVISION}' '${TEST_INDUSTRY}'
	# HUGE hack to use as much default as possible here
	# TODO: Adjust generation scripts accordingly
	$(_V) mv generated_pnml/master_control_program.pnml firs.pnml

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_E) "[CLEAN PNML]"
	$(_V)-rm -rf $(NML_FILE)
	$(_V)-rm -r chameleon_cache
	$(_V)-rm -r generated_pnml
