<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>
    <h3>New Industries and Cargos for OpenTTD</h3>
    <ul class="inline">
        <li><i class="icon-ok-circle"></i> GPL v2 license</li>
    </ul>
    <p class="alert alert-info">Just one little problem: it's not finished yet ;)</p>
    <hr />
    <h4>Industries</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Industry ID</th>
            </tr>
        </thead>
        <tbody>
            <tal:industries repeat="item doc_helper.get_registered_industries_sorted_by_name()">
                <tal:industry define="name item[0]; industry item[1]">
                    <tr>
                        <td>${name}</td>
                        <td>${industry.id}</td>
                    </tr>
                </tal:industry>
            </tal:industries>
        </tbody>
    </table>
    <hr />
    <h4>Cargos</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cargo</th>
            </tr>
        </thead>
        <tbody>
            <tal:cargos repeat="cargo registered_cargos">
                <tr>
                    <td>${cargo.id}</td>
                </tr>
            </tal:cargos>
        </tbody>
    </table>

</div>
</tal:main_template>
