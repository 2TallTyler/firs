<tal:page_with_sidebar_template define="page_with_sidebar_template load: page_with_sidebar_template.pt" metal:use-macro="page_with_sidebar_template">
<div metal:fill-slot='sidebar_nav'>
    <li class="nav-header">Code Reference</li>
    <li><a href="#cargos">Cargos Reference</a></li>
    <li><a href="#industries">Industries Reference</a></li>
</div>

<div metal:fill-slot='body'>
    <div id="cargos">
        <div class="page-header">
            <h2>Cargos <small>Code Reference</small></h2>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Internal ID (src / nml)</th>
                    <th>ID in Game</th>
                    <th>Label</th>
                    <th>Weight</th>
                    <th>Capacity Multiplier</th>
                </tr>
            </thead>
            <tbody>
                <tal:cargos repeat="cargo registered_cargos">
                    <tr>
                        <td>
                            <a href="cargos.html#${cargo.id}">${doc_helper.get_cargo_name(cargo)}</a>
                        </td>
                        <td>${cargo.id}</td>
                        <td>${cargo.number}</td>
                        <td>${cargo.cargo_label}</td>
                        <td>${cargo.weight}</td>
                        <td>${cargo.capacity_multiplier}</td>
                    </tr>
                </tal:cargos>
            </tbody>
        </table>
    </div>
    <br />
    <br />

    <div id="industries">
        <div class="page-header">
            <h2>Industries <small>Code Reference</small></h2>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Internal ID (src / nml)</th>
                    <th>ID in Game</th>
                </tr>
            </thead>
            <tbody>
                <tal:industries repeat="item doc_helper.get_registered_industries_sorted_by_name()">
                    <tal:industry define="name item[0]; industry item[1]">
                        <tr>
                            <td>
                                <a href="industries.html#${industry.id}">${name}</a>
                            </td>
                            <td>${industry.id}</td>
                            <td>${global_constants.industry_numeric_ids[industry.id]}</td>
                        </tr>
                    </tal:industry>
                </tal:industries>
            </tbody>
        </table>
    </div>
</div>
</tal:page_with_sidebar_template>
