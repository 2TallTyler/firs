<tal:page_with_sidebar_template define="page_with_sidebar_template load: page_with_sidebar_template.pt" metal:use-macro="page_with_sidebar_template">
<div metal:fill-slot='sidebar_nav'>
    <li class="nav-header">Cargos (${len(registered_cargos)})</li>
    <tal:economies repeat="cargo registered_cargos">
        <li><a href="#${cargo.id}">${doc_helper.get_cargo_name(cargo)}</a></li>
    </tal:economies>
</div>

<div metal:fill-slot='body'>
    <h2>Cargos</h2>
    <br />
    <tal:economies repeat="cargo registered_cargos">
        <div id="${cargo.id}">
            <div class="page-header" style="overflow:hidden;">
                <h3>${doc_helper.get_cargo_name(cargo)} <small>Cargo</small></h3>
                <p class="pull-left muted">Economies:</p>
                <ul class="pull-left inline">
                    <tal:industries repeat="cargo_in_economy doc_helper.cargo_economy_mapping(economy_schemas, cargo)">
                        <li><a href="economies.html#${cargo_in_economy}">${doc_helper.get_economy_name(cargo_in_economy)}</a></li>
                    </tal:industries>
                </ul>
            </div>

            <!--!<h4>${len(economy_schemas[economy].enabled_industries)} Industries</h4>
            <ul class="inline">
                <tal:industries repeat="industry economy_schemas[economy].enabled_industries">
                    <li>${doc_helper.get_industry_name(industry, economy)}</li>
                </tal:industries>
            </ul>-->
        </div>
    </tal:economies>
</div>
</tal:page_with_sidebar_template>
