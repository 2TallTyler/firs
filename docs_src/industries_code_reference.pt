<tal:main_template define="main_template load: main_template.pt" metal:use-macro="main_template">
<div metal:fill-slot='body'>
    <h3>Industries - Code Reference</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Internal ID (src / nml)</th>
                <th>ID in Game</th>
                <th>Accepted Cargos (FIRS Economy)</th>
                <th>Produced Cargos (FIRS Economy)</th>
            </tr>
        </thead>
        <tbody>
            <tal:industries repeat="item doc_helper.get_registered_industries_sorted_by_name()">
                <tal:industry define="name item[0]; industry item[1]">
                    <tr>
                        <td>${name}</td>
                        <td>${industry.id}</td>
                        <td>${global_constants.industry_numeric_ids[industry.id]}</td>
                        <td>
                            <tal:cargo repeat="cargo getattr(industry.default_industry_properties, 'accept_cargo_types')">
                                ${cargo}
                            </tal:cargo>
                            <i class="icon-exclamation-sign"></i>
                        </td>
                        <td>
                            <tal:cargo repeat="cargo getattr(industry.default_industry_properties, 'prod_cargo_types')">
                                ${cargo}
                            </tal:cargo>
                            <i class="icon-exclamation-sign"></i>
                        </td>
                    </tr>
                </tal:industry>
            </tal:industries>
        </tbody>
    </table>
</div>
</tal:main_template>
